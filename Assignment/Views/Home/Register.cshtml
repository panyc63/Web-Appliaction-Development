@model Assignment.Models.Customer

@{
    ViewData["Title"] = "Register";
}

<h1 style="font-family: Aladin; font-size: 25px; color:white; background-color:#203354"><center>Log In</center></h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <<div class="form-group row">
                <label asp-for="CustomerName"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="CustomerName" required class="form-control" style="width: 300px;" />
                    <span asp-validation-for="CustomerName"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Nationality"
                       class="col-sm-6 col-form-label" style="color:white"></label>
                <div class="col-sm-9 col-md-5">
                    <select asp-for="Nationality"
                            asp-items="@ViewData["CountryList"]
                                        as List<SelectListItem>"
                            required class="form-control" style="width: 300px;">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BirthDate"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="BirthDate" required class="form-control" style="width: 300px;" />
                    <span asp-validation-for="BirthDate"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TelNo"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="TelNo" required class="form-control" style="width: 300px;" />
                    <span asp-validation-for="TelNo"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EmailAddr"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="EmailAddr" required class="form-control" style="width: 300px;" />
                    <span asp-validation-for="EmailAddr"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <span class="col-md-12">
                    <span style="color:white">@TempData["Message"]</span><br />
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            <div>
                <a style="color:white" asp-action="HomePage">Back to Home Page</a>
            </div>
        </form>
    </div>
</div>