@model Assignment.Models.ContactUs;
@{
    ViewData["Title"] = "Contact Us";
}

<h1 style="font-family: Aladin; font-size: 25px; color:white; background-color:#203354"><center>Contact Us</center></h1>

<form class="forms">
    <div class="form-group row">
        <label asp-for="EmailAddress" class="col-sm-3 col-form-label"></label>
        <input asp-for="EmailAddress" class="col-sm-9 col-md-5"  />
    </div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
        <input asp-for="FirstName" class="col-sm-9 col-md-5"  />
    </div>

    <div class="form-group row">
        <label asp-for="Lastname" class="col-sm-3 col-form-label"></label>
        <input asp-for="Lastname" class="col-sm-9 col-md-5"  />
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <input asp-for="Description" class="col-sm-9 col-md-5" style="height:100px;"  />
       
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
