@model Assignment.Models.Customer

@{
    ViewData["Title"] = "Log In";
}

<h1 style="font-family: Aladin; font-size: 25px; color:white; background-color:#203354"><center>Log In</center></h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="~/Home/Login">
            <div class="form-group row">
                <label class="col-sm-6 col-form-label" for="txtLoginID" style="color:white">Login ID:</label><br />
                <div class="col-sm-9 col-md-5">
                    <input type="email" name="txtLoginID" id="txtLoginID" placeholder="Login ID" required /><br />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label" for="txtPassword" style="color:white">Password:</label><br />
                <div class="col-sm-9 col-md-5">
                    <input type="password" name="txtPassword" id="txtPassword" placeholder="Password" required /><br />
                </div>
            </div>
            <div class="form-group row">
                <span class ="col-md-12">
                    <span style="color:red">@TempData["Message"]</span><br />
                </span class>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
