    </div>
    <div class="form-group row">
        <label asp-for="ArrivalDateTime"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext" style="color:white">
            @Html.Display("ArrivalDateTime")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DepartureCountry"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext" style="color:white">
            @Html.Display("DepartureCountry")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DepartureCity"
               class="col-sm-3 col-form-label"></label>
