        <div class="col-sm-9 form-control-plaintext" style="color:white">
            @Html.Display("ArrivalCity")
        </div>
    </div>
    <button onclick="window.print()">Print</button><br /><br />
    <div>
        <a style="color:white" asp-action="ViewBookedTicket">Back to View Other Booked Ticket</a>
    </div>
</fieldset>

