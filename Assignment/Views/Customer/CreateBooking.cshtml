@model Assignment.Models.Booking

@{
    ViewData["Title"] = "Booking Particulars";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1 style="font-family: Aladin; font-size: 25px; color:white; background-color:#203354"><center>Booking Particulars</center></h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ScheduleID"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="ScheduleID" readonly class="form-control" style="width: 300px;" />
                    <span asp-validation-for="ScheduleID"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PassengerName"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="PassengerName" required class="form-control" style="width: 300px;" />
                    <span asp-validation-for="PassengerName"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PassportNumber"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="PassportNumber" required class="form-control" style="width: 300px;" />
                    <span asp-validation-for="PassportNumber"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Nationality"
                       class="col-sm-6 col-form-label" style="color:white"></label>
                <div class="col-sm-9 col-md-5">
                    <select asp-for="Nationality"
                            asp-items="@ViewData["CountryList"]
                                        as List<SelectListItem>"
                            class="form-control" style="width: 300px;">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="SeatClass"
                       class="col-sm-6 col-form-label" style="color:white"></label>
                <div class="col-sm-9 col-md-5">
                    <select asp-for="SeatClass"
                            asp-items="@ViewData["SeatClassList"]
                                        as List<SelectListItem>"
                            class="form-control" style="width: 300px;">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Remarks"
                       class="col-sm-6 col-form-label" style="color:white"></label><br />
                <div class="col-sm-9 col-md-5">
                    <input asp-for="Remarks" required class="form-control" style="width: 300px" />
                    <span asp-validation-for="Remarks"
                          class="text-danger" style="width: 300px;"></span>
                </div>
            </div>
            <div class="form-group row">
                <span class="col-md-12">
                    <span style="color:white">@TempData["Message"]</span><br />
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
            <div>
                <a style="color:white" asp-action="AvailableSchedules">Back to View Other Available Flight Schedules</a>
            </div><br />
            <div>
                <a style="color:white" asp-action="CustomerHomePage">Back to Home Page</a>
            </div>
        </form>
    </div>
</div>
