@model Assignment.Models.Customer
@{
    ViewData["Title"] = "ChangePword";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1 style="font-family: Aladin; font-size: 25px; color:white; background-color:#203354"><center>Change Password</center></h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="OldPassword"
                       class="col-sm-7 col-form-label" style="color:white"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="OldPassword" required class="form-control" style="width:300px" />
                    <span asp-validation-for="OldPassword"
                          class="text-danger" style="width:300px"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NewPassword"
                       class="col-sm-7 col-form-label" style="color:white"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="NewPassword" required class="form-control" style="width:300px;" />
                    <span asp-validation-for="NewPassword"
                          class="text-danger" style="width:300px"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword"
                       class="col-sm-7 col-form-label" style="color:white"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="ConfirmPassword" required class="form-control" style="width:300px;" />
                    <span asp-validation-for="ConfirmPassword"
                          class="text-danger" style="width:300px"></span>
                </div>
            </div>
            <div class="form-group row">
                <span style="color:white">@TempData["Message"]</span><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
            <div>
                <a style="color:white" asp-action="CustomerHomePage">Back to Customer Home Page</a>
            </div>
        </form>
    </div>
</div>