@model IEnumerable<Assignment.Models.Staff>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>StaffID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Date Employed</th>
                    <th>Vocation</th>
                    <th>Emaill Address</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StaffID.ToString()</td>
                        <td>@item.StaffName</td>
                        <td>@item.Gender</td>
                        <td>@item.DateEmployed</td>
                        <td>@item.Vocation</td>
                        <td>@item.EmailAddr</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Flightpersonnel"
                               asp-route-id="@item.StaffID">Edit</a> |
                            <a asp-action="Delete" asp-controller="Flightpersonnel"
                               asp-route-id="@item.StaffID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
