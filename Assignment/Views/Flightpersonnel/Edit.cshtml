@model Assignment.Models.Staff

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Update flight personnel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Aladin" />
</head>

<body style="background-color:#203354; min-height:100%;">
    <!-- A grey navbar that expands horizontally at medium device -->
    <nav class="navbar navbar-expand-md bg-light navbar-light">
        <!-- The brand(or icon) of the navbar -->
        <img id="brandlogo" src="~/images/Brand.png" />
        <a class="navbar-brand" href="~/Home/HomePage"
           style="font-size:32px; font-family: Aladin">
            Lion City Airlines
        </a>
        <!-- Toggle/collapsible Button, also known as hamburger button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#staffNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Links in the navbar, displayed as drop-down list when collapsed -->
        <div class="collapse navbar-collapse" id="staffNavbar">
            <!-- Links that are aligned to the left,
            mr-auto: right margin auto-adjusted -->
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/HomePage">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Deals">Deals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/AboutUs">About Us</a>
                </li>
            </ul>
            <!-- Links that are aligned to the right,
            ml-auto: left margin auto-adjusted -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <!-- A link for logging out user -->
                    <a class="nav-link" href="~/Home/ContactUs">Contact Us</a>
                </li>
                <li class="nav-item">
                    <!-- A link for logging out user -->
                    <a class="nav-link" href="~/Home/HomePage">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container content">
        <!--bootstrap cards to navigate between pages-->
        <div class="options">
            <!--side nav to move between flight personnel pages-->
            <ul class="sidenav">
                <a asp-action="homepage"><li>Flight personnel homepage | </li></a>
                <a href="~/Home/AdminHomePage"><li>Admin homepage</li></a>
            </ul>
            <form asp-action="Edit" class="forms">
                <fieldset class="FormContent">

                    <div class="form-group row">
                        <label asp-for="StaffID"
                               class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="StaffID" readonly
                                   class="form-control-plaintext" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="StaffName"
                               class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="StaffName" readonly
                                   class="form-control-plaintext" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Vocation"
                               class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9 col-md-5">
                            <select id="vocations" asp-for="Vocation" class="form-control">
                                <option value="Administrator">Administrator</option>
                                <option value="Pilot">Pilot</option>
                                <option value="Flight Attendant">Flight Attendant</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="EmailAddr"
                               class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9 col-md-5">
                            <input asp-for="EmailAddr" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Status"
                               class="col-sm-3 col-form-label"></label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input radiobtn" type="radio" value="Active" asp-for="Status">
                            <label class="form-check-label" for="inlineRadio1">Active</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input radiobtn" type="radio" value="Inactive" asp-for="Status">
                            <label class="form-check-label" for="inlineRadio1">Inactive</label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col">
                            <input type="submit" value="Save"
                                   class="btn btn-primary" />
                        </div>
                    </div>
                    <div>
                        <a asp-action="viewstaff">Back to List</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#ffffff">
        <div class="container">
            &copy; 2020 - WEB-2020-P02-T3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>