@model Assignment.Models.FlightRoute

@{
    ViewData["Title"] = "CreateFlightRoute";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<style>
    h4 {
        color: white;
    }
</style>


<center><h4>Create Flight Route</h4></center>
<div class="options">
    <a asp-action="ViewFlightRoute">Back to List</a>
</div>
<div class="row ">
    <div class="col-md-12">
        <form class="forms" asp-action="CreateFlightRoute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group tablerow">
                <label asp-for="DepartureCity" class="control-label col-md-5"></label>
                <input asp-for="DepartureCity" class=" col-md-4" required/>
                <span asp-validation-for="DepartureCity" class="text-danger"></span>
            </div>
            <div class="form-group tablerow">
                <label asp-for="DepartureCountry" class="control-label col-md-5"></label>
                <input asp-for="DepartureCountry" class=" col-md-4" required/>
                <span asp-validation-for="DepartureCountry" class="text-danger"></span>
            </div>
            <div class="form-group tablerow">
                <label asp-for="ArrivalCity" class="control-label col-md-5"></label>
                <input asp-for="ArrivalCity" class=" col-md-4" required/>
                <span asp-validation-for="ArrivalCity" class="text-danger"></span>
            </div>
            <div class="form-group tablerow">
                <label asp-for="ArrivalCountry" class="control-label col-md-5"></label>
                <input asp-for="ArrivalCountry" class=" col-md-4" required/>
                <span asp-validation-for="ArrivalCountry" class="text-danger"></span>
            </div>
            <div class="form-group tablerow">
                <label asp-for="FlightDuration" class="control-label col-md-5"></label>
                <input asp-for="FlightDuration" class=" col-md-4" required/>
                <span asp-validation-for="FlightDuration" class="text-danger"></span>
            </div>
            <div class="form-group tablerow">
                <input type="submit" value="Create Route" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>



