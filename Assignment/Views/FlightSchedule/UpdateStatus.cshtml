@model Assignment.Models.FlightSchedule

@{
    ViewData["Title"] = "Update Status";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Aladin" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<style>
    h1 {
        color: white;
    }
</style>
<center>
    <h1>Update Status</h1>
</center>
<hr />
<div class="options">
    <a asp-action="ViewFlightSchedule">Back to List</a>
</div>
<div class="container content">
    <div class="col-md-12">
        <form asp-action="UpdateStatus" class="forms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="ScheduleID" class="col-sm-3 col-form-label"></label>
                <input asp-for="ScheduleID" class="col-sm-9 col-md-5" readonly />
            </div>
            <div class="form-group row">
                <label asp-for="FlightNumber" class="col-sm-3 col-form-label"></label>
                <input asp-for="FlightNumber" class="col-sm-9 col-md-5" readonly />
            </div>

            <div class="form-group row">
                <label asp-for="RouteID" class="col-sm-3 col-form-label"></label>
                <input asp-for="RouteID" class="col-sm-9 col-md-5" readonly />
            </div>
            <div class="form-group row">
                <label asp-for="Status" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 col-md-5">
                    <select asp-for="Status"
                            asp-items="@ViewData["statusList"]
                        as List<SelectListItem>"
                            class="form-control">
                    </select>
                </div>

                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>



