@model Assignment.Models.FlightSchedule

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<style>
    h4 {
        color: white;
        text-align: center;
    }
</style>
<br />
<h4>Create Flight Schedule</h4>
<div class="options">
    <a asp-action="ViewFlightSchedule">Back to List</a>
</div>

<div class="container">
    <div class="col-md-12">
        <form class="forms" asp-action="CreateFlightSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ScheduleID" class="control-label col-md-6></label>
                <input asp-for="ScheduleID" class="col-md-4" required/>
                <span asp-validation-for="ScheduleID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="FlightNumber" class="control-label col-md-6"></label>
                <input asp-for="FlightNumber" class="col-md-4" required/>
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="RouteID" class="control-label col-md-6"></label>
                <select asp-for="RouteID"
                        asp-items="@ViewData["route"]
                            as List<SelectListItem>"
                        class="col-md-4 ">
                </select>
                <span asp-validation-for="RouteID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="AircraftID" class="control-label col-md-6"></label>
                <select asp-for="AircraftID"
                        asp-items="@ViewData["aircraft"]
                            as List<SelectListItem>"
                        class="col-md-4">
                </select>
                <span asp-validation-for="AircraftID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="DepartureDateTime" class="control-label col-md-6"></label>
                <input asp-for="DepartureDateTime" class="col-md-4" required/>
                <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="EconomyClassPrice" class="control-label col-md-6"></label>
                <input asp-for="EconomyClassPrice" class="col-md-4" required/>
                <span asp-validation-for="EconomyClassPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="BusinessClassPrice" class="control-label col-md-6"></label>
                <input asp-for="BusinessClassPrice" class="col-md-4" required/>
                <span asp-validation-for="BusinessClassPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Status" class="control-label col-md-6"></label>
                <select asp-for="Status"
                        asp-items="@ViewData["status"]
                            as List<SelectListItem>"
                        class="col-md-4">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <span class="row"style="color:red;text-align:center; ">@TempData["Message"]</span><br />
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


